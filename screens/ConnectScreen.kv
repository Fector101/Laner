#: import MDTextButton components.templates.MDTextButton
<FirstSlide>:
    pos_hint: {"center_x": 0.5, "center_y": 0.5}
    radius: [20]
    padding: "20dp"
    orientation: "vertical"

    
    Widget:
        size_hint_y: None
        height: "10dp"

    # WiFi to device connection
    MDBoxLayout:
        orientation: "horizontal"
        adaptive_width:True
        spacing: "15dp"
        pos_hint: {"center_x": 0.5}

        MDIcon:
            icon: "wifi"
            theme_text_color: "Custom"
            text_color: 0, 0.4, 1, 1  # Blue
            theme_font_size:"Custom"
            font_size: "50sp"
        
        MDIcon:
            icon: "arrow-right"
            theme_text_color: "Custom"
            text_color: 0, 0.4, 1, 1
            theme_font_size:"Custom"
            font_size: "40sp"

        MDIcon:
            icon: "server"
            theme_text_color: "Custom"
            text_color: 0, 0.4, 1, 1  # Blue
            theme_font_size:"Custom"
            font_size: "50sp"

    Widget: # :( margin
        size_hint_y: None
        height: "8sp"

    MDLabel:
        text: "Connect your devices"
        theme_font_size:"Custom"
        font_size:"22sp"
        halign: "center"
        bold: True
    Widget: # :( margin
        size_hint_y: None
        height: "5sp"
    MDLabel:
        text: "Connect your phone's hotspot to your PC's Wi-Fi or connect both devices to the same network."
        halign: "center"
        theme_text_color: "Secondary"
        font_size: "14sp"
        size_hint_y: None
        height: "60dp"

    Widget:
        size_hint_y: None
        height: "10dp"

    
<SecondSlide>:
    pos_hint: {"center_x": 0.5, "center_y": 0.5}
    radius: [20]
    padding: "20dp"
    orientation: "vertical"

    Widget:
        size_hint_y: None
        height: "10dp"

    MDBoxLayout:
        orientation: "horizontal"
        adaptive_width:True
        spacing: "15dp"
        pos_hint: {"center_x": 0.5}

        MDIcon:
            icon: "server"
            text_color: 0, 0.5, 1, 1
            theme_font_size:"Custom"
            font_size: "50sp"

        MDIcon:
            icon: "arrow-right"
            text_color: 0.3, 0.3, 0.3, 1
            theme_font_size:"Custom"
            font_size: "40sp"

        MDIcon:
            icon: "cellphone"
            text_color: 0, 0.5, 1, 1
            theme_font_size:"Custom"
            font_size: "50sp"

    Widget: # :( margin
        size_hint_y: None
        height: "8dp"

    MDLabel:
        text: "Start on PC"
        theme_font_size:"Custom"
        font_size:"25sp"
        halign: "center"
        bold: True

    MDLabel:
        text: 'Press the "Start" button on Laner-PC to initiate the connection.'
        halign: "center"
        theme_text_color: "Secondary"
        font_size: "14sp"
        size_hint_y: None
        height: "60dp"

    Widget: # :( margin
        size_hint_y: None
        height: "10dp"


<LastSlide>:
    pos_hint: {"center_x": 0.5, "center_y": 0.5}
    radius: [20]
    padding: "20dp"
    orientation: "vertical"

    Widget:
        size_hint_y: None
        height: "10dp"

    MDBoxLayout:
        orientation: "horizontal"
        adaptive_width:True
        spacing: "15sp"
        pos_hint: {"center_x": 0.5}
        MDIcon:
            icon: "cellphone"
            text_color: 0, 0.5, 1, 1
            theme_font_size:"Custom"
            font_size: "50sp"
    MDLabel:
        text: "Connect to PC"
        font_size:"25sp"
        bold: True
        halign: "center"

    MDLabel:
        text: "Now it's time to establish a connection with your PC."
        theme_text_color: "Secondary"
        halign: "center"
        font_size: "14sp"

<ConnectScreen>:
    name: "connect"
    MDScreen:
        md_bg_color: .1,.1, .1, .1

        MDCard:
            id:main_card

            size_hint_x: None
            width:"320sp"
            adaptive_height:True
            # size_hint: None, None
            # size: "320dp", "400dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 5
            radius: [20]
            padding: ['20dp','30dp','20dp','20dp']
            orientation: "vertical"
            MDLabel:
                text: "Welcome"
                theme_font_size:"Custom"
                font_size:"30sp"
                halign: "center"
                bold: True
                # size_hint: 1,None
                # height:"40sp"
                adaptive_height:True
            MDLabel:
                text: "Let's get your devices connected"
                adaptive_height:True

                # size_hint: 1,None
                # height:"40sp"
                halign: "center"
                theme_text_color: "Secondary"
                font_size: "14sp"

            # Dots indicator (use three labels as placeholders)
            MDBoxLayout:
                id: dots
                size_hint_y: None
                height: "20dp"
                adaptive_width:True
                spacing: "5dp"
                pos_hint: {"center_x": 0.5}
                MDIcon:
                    icon: "circle"
                    # text:'0'
                    theme_text_color: "Custom"
                    text_color: 0, 0.4, 1, 1
                    theme_font_size:"Custom"
                    font_size: "10sp"
                MDIcon:
                    icon: "circle"
                    # text:'1'
                    theme_text_color: "Custom"
                    text_color: 0.8, 0.8, 0.8, 1
                    theme_font_size:"Custom"
                    font_size: "10sp"
                MDIcon:
                    icon: "circle"
                    # text:'2'
                    theme_text_color: "Custom"
                    text_color: 0.8, 0.8, 0.8, 1
                    theme_font_size:"Custom"
                    font_size: "10sp"

            MDSwiper:
                id: swiper
                size_hint: None, None
                size: "320dp", "210dp"
                on_swipe: root.update_dots(swiper.get_current_index())
                md_bg_color: 1, 1, 0, 1
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                FirstSlide:
                SecondSlide:
                LastSlide:
            MDTextButton:
                id: first_btn
                text: "Continue"
                size_hint: 1,None
                height:"40sp"
                pos_hint: {"center_x": 0.5}
                md_bg_color: 0, 0.4, 1, 1
                size_hint_x: 0.8
                on_release: root.next_slide()
            Widget:
                id:btns_padding
                size_hint_y: None
                height: "0sp"
            MDTextButton:
                id: second_btn
                text: "Back"
                size_hint: 1,None
                height:"0sp"
                pos_hint: {"center_x": 0.5}
                md_bg_color: 0, 0.4, 1, 1
                size_hint_x: 0.8
                on_release: root.prev_slide()
                disabled: True
                opacity: 0
